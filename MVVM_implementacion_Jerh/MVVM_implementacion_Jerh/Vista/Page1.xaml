<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MVVM_implementacion_Jerh.Vista.Page1">
    <Grid BackgroundColor="Aqua">
        <StackLayout VerticalOptions="Center">
            <StackLayout Orientation="Horizontal" HorizontalOptions="Center">

                <Label Text="Mensaje:" TextColor="White" FontAttributes="Bold" VerticalOptions="Center"/>
                <Entry PlaceholderColor="White" Placeholder="Escribir su mensaje" HorizontalOptions="StartAndExpand" Text="{Binding Texto}"/>
                
            
            </StackLayout>
            
            <Button Text="Guardar" HorizontalOptions="Center" VerticalOptions="Center" Command="{Binding Alertacommand}"/>
        </StackLayout>
        
    </Grid>
</ContentPage>

